# RPC endpoint (default: Solana devnet)
RPC_URL=https://api.devnet.solana.com

# Path to the payer's keypair JSON (Solana CLI format)
# Example: /home/you/.config/solana/id.json
PAYER_KEYPAIR=

# Public key to receive the initial supply (defaults to payer if empty)
DESTINATION_OWNER=

# Token configuration
# Common default for SPL tokens is 9
MINT_DECIMALS=9

# Fixed supply in whole tokens (not in smallest units). 1,000,000,000 = 1B.
INITIAL_SUPPLY=1000000000

# Set to true to also revoke freeze authority (recommended for fully trustless token)
REVOKE_FREEZE_AUTHORITY=false

# Timelock program (optional advanced setup)
# After minting the full 1B supply, you can lock 600M in a vault that auto-releases at a specific time.
# Deploy the program and set PROGRAM_ID here.
PROGRAM_ID=Timelock1111111111111111111111111111111111

# Devs wallet (destination of allocations and release)
DEV_WALLET=

# Unlock time for the 600M release (ISO-8601 in UTC)
RELEASE_AT_ISO=2025-12-30T00:00:00Z

# Optionally specify custom lock amount (whole tokens)
LOCK_AMOUNT=600000000

# Optional: Token metadata (set before first create to avoid needing mint authority later)
METADATA_NAME=MyXen Token
METADATA_SYMBOL=MYXN
# Host metadata JSON (image, description, etc.) on Arweave/IPFS and put its URI here
METADATA_URI=
# Optional distinct update authority public key; defaults to payer if empty
METADATA_UPDATE_AUTHORITY_PUBKEY=


# Compliance wrapper governance (optional until you use cMYXN)
# Set to the deployed compliance_wrapper program id when ready
COMPLIANCE_PROGRAM_ID=CompWrap111111111111111111111111111111111

# Comma-separated list of multisig member pubkeys
GOVERNANCE_MEMBERS=
# Number of approvals required (e.g., 3 for a 3-of-5)
GOVERNANCE_THRESHOLD=3
# Timelock delay for governance changes in seconds (e.g., 24h = 86400)
GOVERNANCE_DELAY_SECONDS=86400

